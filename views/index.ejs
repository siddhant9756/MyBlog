<%- include ("partials/header") %>
<div class="ui main text container">
	<div class="ui huge header">
		My RESTful Blog
	</div>
	<div class="ui divided items">
		<% blog.forEach(function(blog){ %>
			<div id="item" class="item">
				<div id="image" class="image">
					<img src = "<%= blog.image %>">
				</div>
				<div class="content">
					<a class="header" href="/blogs/<%= blog._id %>"><%= blog.title %></a>
					<div class="meta"><span><%= blog.created.toDateString() %></span></div>
					<div class="description"><p><%= blog.body.substring(0, 100) %>...</p></div>
					<div class="extra">
						<a id="readmore"class="header" href="/blogs/<%= blog._id %>">Read More <i class="right chevron icon"></i></a>
					</div>
				</div>
			</div>
		<% }) %>
	</div>
</div>

<%- include ("partials/footer") %>